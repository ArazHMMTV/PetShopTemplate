@using Core.Models
@model Slider

<div class="container">
    <div class="row">
       <form asp-action="DeletePost" method="post">
            <div class="card" style="width: 18rem;">
                <img src="~/uploads/sliders/@Model.ImageUrl" width="100" height="100" alt="Alternative" />
                <div class="card-body">
                    <h5 class="card-title">@Model.FullName</h5>
                    <p class="card-text">@Model.Designation</p>
                    <a asp-action="index" asp-controller="Slider" class="btn btn-outline-info">Go Back</a>
                    <input asp-for="@Model.Id" hidden value="@Model.Id" />
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                </div>
            </div>
       </form>
    </div>
</div>