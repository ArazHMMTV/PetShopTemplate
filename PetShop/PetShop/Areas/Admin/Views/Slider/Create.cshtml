@using Core.Models
@model Slider


<div class="container">
    <div class="row">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">FullName</label>
                <input asp-for="FullName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                  <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Designation</label>
                <input asp-for="Designation" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">ImageUrl</label>
                <input asp-for="ImageUrl" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Image</label>
                <input asp-for="ImageFile" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
          
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        </div>
</div>