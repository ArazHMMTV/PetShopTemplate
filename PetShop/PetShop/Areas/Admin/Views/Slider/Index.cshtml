@using Core.Models
@model List<Slider>
@{
    int counter = 1;
}
<div class="container">
    <div class="row">
        <div class="row">
            <a asp-action="Create" class="btn btn-outline-primary">Create</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">FullName</th>
                    <th scope="col">Designation</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>


                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@(counter++)</th>
                        <td>@item.FullName</td>
                        <td>@item.Designation</td>
                        <td><img src="~/uploads/sliders/@item.ImageUrl" width="100" height="100" alt="Alternative" /></td>

                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-danger">Update</a>

                        </td>
                    </tr>

                }
               
            </tbody>
        </table>
    </div>
</div>